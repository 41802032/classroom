<div class="site-content">
  <div class="site-content-cap">
    <h1 class="site-content-heading">Connect to Google Classroom</h1>
  </div>

  <div class="site-content-body">
    <div class="my-3">
      <h2 class="h3 mb-2">Select the Google Classroom <span class="text-normal text-gray">that you want to connect to <%= current_organization.title %></span></h2>

       <div class="Box">
          <div class="Box-header">
            <%= form_tag google_classrooms_search_organization_path, id: 'js-search-form', class: 'form-block col-md-4 py-2', method: :get, remote: true do %>
              <%= text_field_tag :query, params[:query], class: 'form-control width-full', placeholder: 'Search Google Classrooms...', autofocus: true, autocomplete: :off %>
            <% end %>
          </div>
        <ul id="js-search-results" class="overflow-scroll" style="max-height:275px;">
          <%= render partial: 'google_classroom_collection', locals: {courses: @google_classroom_courses} %>
        </div>
      </div>

      <div class="f4 text-gray text-italic my-3">
          or
          <%= link_to "manually add students",
                      new_roster_path,
                      class: "btn-link"
          %>
        </div>
      </div>

      <div class="d-flex flex-items-center border-top pt-5">
        <%= submit_tag 'Import roster', class: 'btn btn-primary mr-3', form: "google_classroom_import" %>
        <%= link_to 'Skip', organization_path(current_organization), class: 'btn-link' %>
      </div>
    </div>
  </div>
</div>
